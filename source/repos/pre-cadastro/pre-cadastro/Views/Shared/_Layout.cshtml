<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - pre_cadastro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pre_cadastro.styles.css" asp-append-version="true" />

</head>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<body>
    
    <header>
       <img class="logo-img" src="./css/WhatsApp_Image_2022-09-09_at_18.48.36-removebg-preview.png"  alt="logo-equilibrio" />
        <h1 class="title1" >PRÉ-CADASTRO</h1>
    </header>
   
    <form class="form1">
            <div>
        <label for="numbercpf">CPF:</label>     
            <input type="text" id="text1" name="text" size="52" maxlength="52" placeholder="Digite seu CPF" />
        </div>
        <hr class="line"/>
        <div>
            <label for="name">NOME:</label>
            <input type="text" id="Name" name="Name" size="50" maxlength="50" placeholder="Digite seu nome" />
        </div>
        <hr class="line" /> 
        <div>
            <label for="Email">EMAIL:</label>
            <input type="email" id="Email" name="Email" size="50" maxlength="50" placeholder="Digite seu email" />
        </div>
        <hr class="line" />
        <div>
            <label for="Password">SENHA:</label>
            <input type="password" id="Password" name="Password" size="49" maxlength="50" placeholder="Digite sua senha" />
        </div>
        <hr class="line" />
         
            <div class="container2">
            <div class="flexboxinteresses">
            <span>INTERESSES:</span>
            </div>
            <div class="flexbox2">
            <label for="checkbox">Mediador</label>
            </div>
            <div class="flexboxcheck1">
            <input type="checkbox" id="checkbox"  name="checkbox" />
            </div>
            <div class="flexbox3">
                <label for="checkbox">Arbitro</label>
            </div>
            <div class="flexboxcheck2">
                <input type="checkbox" id="checkbox1" name="checkbox1" />
            </div>
            <div class="flexbox4">
                <label for="checkbox">Conciliador</label>
                </div>
            <div class="flexboxcheck3">
                <input type="checkbox" id="checkbox2" name="checkbox2" />
          </div>
           </div>
           
    </form>
   <div class="flexbox">
        <button type="button" class="btn btn-outline-dark me-md-2">Enviar</button>
        <button type="button" class="btn btn-outline-dark text-color:black "><a href="https://equilibriopazsocia.wixsite.com/equilibriopazsocial" target="_blank">Voltar</a></button>
    </div>

</body>
    <footer class="footer">
        <div class="container">
           
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>
